# IELTS Master Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (Required for Production)
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Choose authentication provider: 'supabase' (recommended) or 'backend'
NEXT_PUBLIC_AUTH_PROVIDER=supabase

# =============================================================================
# MENTORSHIP SYSTEM CONFIGURATION
# =============================================================================
# Use Supabase for mentorship data: 'true' (recommended) or 'false'
NEXT_PUBLIC_USE_SUPABASE_MENTORSHIP=true

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Railway backend URL (for AI features like Writing Coach)
NEXT_PUBLIC_API_URL=https://web-production-4d7f.up.railway.app

# =============================================================================
# AI/LLM CONFIGURATION (Backend)
# =============================================================================
# These are used by the Railway backend for AI features
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# DATABASE CONFIGURATION (Backend)
# =============================================================================
# Railway PostgreSQL URL (auto-generated)
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="IELTS Master Platform"
APP_VERSION="2.1.2"
DEBUG=false
SECRET_KEY=your-secret-key-here

# =============================================================================
# CORS CONFIGURATION (Backend)
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://your-domain.vercel.app"]

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. For Vercel deployment:
#    - Set NEXT_PUBLIC_SUPABASE_URL and NEXT_PUBLIC_SUPABASE_ANON_KEY
#    - Set NEXT_PUBLIC_AUTH_PROVIDER=supabase
#    - Set NEXT_PUBLIC_USE_SUPABASE_MENTORSHIP=true
#    - Set NEXT_PUBLIC_API_URL to your Railway backend URL
#
# 2. For Railway deployment:
#    - Set OPENAI_API_KEY and ANTHROPIC_API_KEY
#    - Set DATABASE_URL (auto-generated by Railway)
#    - Set BACKEND_CORS_ORIGINS to include your Vercel domain
#
# 3. For Supabase setup:
#    - Run the SQL script in supabase/schema.sql
#    - Create users via Supabase Auth or the seeding script
