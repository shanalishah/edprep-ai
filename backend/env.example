# IELTS Master Platform - Environment Variables Template
# Copy this file to .env and update the values

# App Configuration
APP_NAME="IELTS Master Platform"
APP_VERSION="2.0.0"
DEBUG=false
SECRET_KEY="your-super-secret-key-change-in-production"

# API Settings
API_V1_STR="/api/v1"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/ielts_master"
REDIS_URL="redis://localhost:6379"

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002"]

# ML Models Configuration
MODELS_DIR="/Users/shan/Desktop/Work/Projects/EdPrep AI/edprep-ai-prototype/models"
USE_ML_MODELS=true
FALLBACK_TO_RULE_BASED=true

# AI/LLM Integration
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
USE_AI_FEEDBACK=true

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Gamification Settings
ENABLE_GAMIFICATION=true
POINTS_PER_ESSAY=10
BONUS_POINTS_THRESHOLD=7.0

# Social Features
ENABLE_SOCIAL_FEATURES=true
ENABLE_MENTORING=true

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=[".pdf",".docx",".txt"]

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=true

# Monitoring and Logging
LOG_LEVEL="INFO"
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Security Settings
BCRYPT_ROUNDS=12
JWT_ALGORITHM="HS256"
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Cache Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Development Settings
RELOAD_ON_CHANGE=true
DEBUG_SQL=false
ENABLE_SWAGGER=true
